{
  "name": "bitcoin-wallet-connector",
  "version": "0.3.1",
  "description": "A Bitcoin wallet connector with various adapters.",
  "license": "MIT",
  "author": "c4605",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolasblack/bitcoin-wallet-connector.git"
  },
  "bugs": {
    "url": "https://github.com/bolasblack/bitcoin-wallet-connector/issues"
  },
  "homepage": "https://github.com/bolasblack/bitcoin-wallet-connector#readme",
  "keywords": [
    "bitcoin",
    "wallet",
    "adapter",
    "unisat",
    "xverse",
    "okx",
    "leather",
    "bitget",
    "magic-eden",
    "web3"
  ],
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.mjs",
      "default": "./lib/index.js"
    },
    "./adapters": {
      "types": "./lib/adapters.d.ts",
      "import": "./lib/adapters.mjs",
      "default": "./lib/adapters.js"
    },
    "./react": {
      "types": "./lib/react.d.ts",
      "import": "./lib/react.mjs",
      "default": "./lib/react.js"
    }
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "pnpm run build",
    "postinstall": "git-hook-pure install",
    "build": "vite build",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.28.0",
    "@leather.io/rpc": "^2.21.4",
    "@scure/base": "^2.0.0",
    "@scure/btc-signer": "^2.0.1",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "git-hook-pure": "^3.3.0",
    "globals": "^16.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "sats-connect": "^4.2.1",
    "storybook": "^10.1.11",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@leather.io/rpc": "^2.0.0",
    "@scure/base": "^2.0.0",
    "@scure/btc-signer": "^2.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "sats-connect": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@leather.io/rpc": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "sats-connect": {
      "optional": true
    }
  }
}
